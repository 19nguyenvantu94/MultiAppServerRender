@using BlazorWeb.Services
<MudDialog Loading="@IsLoading" DisableBackdropClick="true" DisableEscapeKeyDown="true">
    <!-- Your loading content here -->
    <MudProgressCircular Color="Color.Default" Indeterminate="true" />
</MudDialog>

@code {
    [Inject] private ILoadingService LoadingService { get; set; }
    private bool IsLoading { get; set; }

    protected override void OnInitialized()
    {
        LoadingService.OnLoadingChanged += HandleLoadingChanged;
    }

    private void HandleLoadingChanged(bool isLoading)
    {
        IsLoading = isLoading;
        StateHasChanged();
    }

    public void Dispose()
    {
        LoadingService.OnLoadingChanged -= HandleLoadingChanged;
    }
}