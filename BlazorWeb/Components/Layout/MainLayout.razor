@using BlazorWeb.Services
@inherits LayoutComponentBase
@inject Microsoft.Extensions.Localization.IStringLocalizer<MainLayout> _localizer

<audio id="notification" src="/media/notification.mp3" />
<MudThemeProvider Theme="_currentTheme">
</MudThemeProvider>
<MudDialogProvider />
<MudSnackbarProvider />

<AuthorizeView>
    <NotAuthorized>
        <GlobalLoadingIndicator />
        <MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center" Style="height: 100vh;">
            <MudPaper Elevation="25" Class="pa-8" Style="width: 500px;">
                @Body
            </MudPaper>
        </MudContainer>
    </NotAuthorized>
    <Authorized>
        <GlobalLoadingIndicator />
        <MudLayout>
            <MainBody OnDarkModeToggle="@DarkMode"></MainBody>
        </MudLayout>
    </Authorized>
</AuthorizeView>
