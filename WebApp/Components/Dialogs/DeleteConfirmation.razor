@namespace WebApp.Components.Dialogs
@inject Microsoft.Extensions.Localization.IStringLocalizer<DeleteConfirmation> localizer
<SfDialog @bind-Visible="@IsVisible" ShowCloseIcon="true" Header="@localizer["Delete Confirmation"]" Content="@ContentText" IsModal="true" Width="250px">
    <DialogTemplates>
        @*   <SfTextBox Typo="Typo.h6">
        <SfIcon Name="Deke" Class="mr-3 mb-n1" />
        @localizer["Delete Confirmation"]
        </SfTextBox> *@
        @*    <Content>
        <SfTextBox>@ContentText</SfTextBox>
        </Content> *@
    </DialogTemplates>

    <DialogButtons>
        <DialogButton OnClick="OnCancel">@localizer["Cancel"]</DialogButton>
        <DialogButton Color="Color.Error" Variant="Variant.Filled" IsPrimary="true" OnClick="OnSubmit">@localizer["Confirm"]</DialogButton>
    </DialogButtons>

    <DialogEvents Closed="@Closed"></DialogEvents>
</SfDialog>
@code {

    [Parameter] public string ContentText { get; set; }

    public bool IsVisible { get; set; } = false;

    public string userResponse = "No";

    Index mainPageObj = new Index();

    public void OnSubmit()
    {
        userResponse = "OnOkYes";
        CloseDialog();
    }

    public async Task Closed()
    {
        await mainPageObj.dialogClosed(userResponse);

    }

    public void CloseDialog()

    {

        this.IsVisible = false;

        this.StateHasChanged();

    }

    public void OnCancel()
    {
        userResponse = "OnCancelYes";

        CloseDialog();

    }
}